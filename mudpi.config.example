{
    "name": "MudPi",
    "log_level": "debug",
    "log_file": "./mudpi.log",
    "server": {
        "host": "127.0.0.1",
        "port": 6602
    },
    "redis": {
        "host": "127.0.0.1",
        "port": 6379
    },
    "nodes": [
        {
            "name": "Arduino Box 1",
            "type": "arduino",
            "address": "/dev/ttyUSB0",
            "sensors": [
                {
                    "pin": "0",
                    "is_digital": false,
                    "type": "Soil",
                    "name": "Soil Left Sensor"
                },
                {
                    "pin": "3",
                    "is_digital": true,
                    "type": "Humidity",
                    "name": "Weather Station"
                },
                {
                    "pin": "4",
                    "is_digital": true,
                    "type": "Rain",
                    "name": "Rain Sensor"
                }
            ]
        },
        {
            "name": "Arduino Box 2",
            "type": "arduino",
            "address": "/dev/ttyUSB1",
            "sensors": [
                {
                    "pin": "7",
                    "is_digital": true,
                    "type": "Humidity",
                    "name": "Weather Station 2"
                }
            ]
        },
         {
            "name": "MCP3008 #1",
            "type": "ADC-MCP3008",
            "pin": "22",
            "sensors": [
                {
                    "pin": "0",
                    "type": "Soil",
                    "name": "Soil Sensor #1"
                },
                {
                    "pin": "1",
                    "type": "Soil",
                    "name": "Soil Sensor #1"
                }
            ]
        }
    ],
    "workers":[
        {
            "type":"sensor",
            "sleep_duration":30,
            "channel":"pi-sensors",
            "sensors": [
                {
                    "type":"Humidity",
                    "pin": 24,
                    "name":"Environment",
                    "model":"11"
                }
            ]
        }
    ]
}
